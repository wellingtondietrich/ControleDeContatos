@model ContatoModel

@{
    ViewData["Title"] = "Apagar - Confirmação";
}

<div class="text-center">
    <h3>Deseja realmente apagar o contato (@Model.Nome) </h3>

</div>
<a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>
<a class="btn btn-danger" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar</a>